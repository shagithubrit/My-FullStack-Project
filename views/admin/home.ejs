        </div>
    </div>
   </div> 

   <div class="recent-grid">
    <div class="projects">
        <div class="card">
        <div class="card-header">
          <h3>Recent Complaints</h3>

          <button>See All <span class="las la-arrow-right">

          </span></button>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table width="100%">
                    <thead>
                        <tr>
                            <td>Resident</td>
                            <td>Complaint Title</td>
                            <td>Type Of Complaint</td>
                            <td>Status</td>
                        </tr>
                    </thead>
                    <tbody>
                        <% if(users.length> 0){
                            for(let i = 0; i<users.length && i<12 ; i++){ %>  
                        <tr>
                            <td><%= users[i].name %></td>
                            <td><%= users[i].customcomplain %></td>
                            <td>Custom</td>
                            <td style="padding: 10px;">
        
                            <a href="/admin/review?id=<%= users[i]._id%>">
                                <%
                                if(users[i].review && users[i].status){ %>
                                    <span style="background-color: rgb(32, 212, 4); color: white; padding: 5px 10px; border-radius: 10px;">completed</span>
                                 
                                <% }else if(users[i].review){ %>
                                    <span style="background-color: rgb(18, 4, 212); color: white; padding: 5px 10px; border-radius: 10px;">Reviewed</span>
                                <% }
                                else{ %>
                                    <span style="background-color: rgb(212, 70, 4); color: white; padding: 5px 10px; border-radius: 10px;">underprocess</span>
                                <% } %>
                                
                            </a>
                            </td>
                        </tr>
                        <% }
                     } %>
                    </tbody>
                        </table>
            </div>

  
        </div>
        </div>
    </div>
    <div class="customers">
        <div class="card">
            <div class="card-header">
