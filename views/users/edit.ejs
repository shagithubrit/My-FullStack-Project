<body>
    <nav class="navbar bg-light">
        <div class="container">
            <a class="navbar-brand" href="#">
                <img src="/public/Aviskar.jfif" alt="Aviskar" id="login-img" width="30" height="24">
                COMPLAINT-BOX
            </a>
        </div>
    </nav>
    <br>
    <div id="complaint_box">
        <h1 id="complain">
        <h2>
            <center>Edit your Profile</center>
        </h2>
        

        <div id="form">
            
                    <form action="" method="post" enctype="multipart/form-data">
                      <center>
                       <img src="userImages/<%= user.image%>"  height="100px" alt="Profile pic">
                      </center>
                       <label for="text">Profile pic</label>
                       <center>
                        <input style="height: 40px;" type="file" name="image">
                      </center>
                      <input type="hidden" name="user_id" value="<%= user._id%>">
